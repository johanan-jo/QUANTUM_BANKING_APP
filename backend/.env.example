# Quantum Banking Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE (Supabase PostgreSQL)
# ============================================
# Get from: Supabase Project Settings > Database > Connection String
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# Alternative: Individual DB parameters (not needed if using DATABASE_URL)
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASS=your_password
# DB_NAME=quantum_banking
# DB_PORT=5432

# ============================================
# JWT SECRET (for token generation)
# ============================================
# Generate a strong random secret: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random-and-secure

# ============================================
# EMAIL (SMTP Configuration)
# ============================================
# Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ============================================
# APPLICATION SETTINGS
# ============================================
# Set to "false" in production to prevent OTP leakage in API responses
DEBUG_OTP=false

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=false

# Port (set automatically by Railway/Render, but defaults to 5000 for local)
PORT=5000
